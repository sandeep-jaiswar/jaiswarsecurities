{
  "name": "bloomberg-stock-terminal",
  "version": "1.0.0",
  "description": "Bloomberg-style Stock Terminal with ClickHouse",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=client",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v && docker system prune -f",
    "test": "npm test --workspace=client -- --watchAll=false",
    "lint": "npm run lint --workspace=client -- --fix",
    "lint:fix": "npm run lint --workspace=client -- --fix",
    "type-check": "npm run type-check --workspace=client",
    "pre-commit": "lint-staged",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3001",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "14.0.4",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "15.2.2",
    "nodemon": "^3.0.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "supertest": "^6.3.3",
    "typescript": "5.3.3",
    "typescript-eslint": "^7.1.0"
  },
  "overrides": {
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "^10.4.21",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "zustand": "^4.4.6"
  }
}
